<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:layout_collapseParallaxMultiplier="1.0">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Question"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"/>

    <Button
        android:text="True"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/true_button"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp" />

    <Button
        android:text="False"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/false_button"
        android:layout_weight="1"
        android:layout_marginStart="33dp"
        android:layout_alignBaseline="@+id/true_button"
        android:layout_alignBottom="@+id/true_button"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Topic"
        android:ems="10"
        android:layout_below="@+id/Question"
        android:layout_alignStart="@+id/false_button"
        android:layout_marginTop="86dp"
        android:id="@+id/editTopic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Question"
        android:ems="10"
        android:layout_below="@+id/editTopic"
        android:layout_alignStart="@+id/editTopic"
        android:id="@+id/editQuestion" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editQuestion"
        android:layout_alignEnd="@+id/editQuestion"
        android:id="@+id/add_button" />

</RelativeLayout>

