<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/database_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="k1noo.bonb.DatabaseScreen">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Fact"
        android:ems="10"
        android:layout_below="@+id/Fact"
        android:layout_alignStart="@+id/false_button"
        android:layout_marginTop="86dp"
        android:id="@+id/editFact"
        android:visibility="invisible"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Veracity"
        android:ems="10"
        android:layout_below="@+id/editFact"
        android:layout_alignStart="@+id/editFact"
        android:id="@+id/editVeracity"
        android:visibility="invisible"/>

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editVeracity"
        android:layout_alignEnd="@+id/editVeracity"
        android:id="@+id/add_button"
        android:visibility="invisible"/>

    <Button
        android:text="Read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_button"
        android:layout_alignEnd="@+id/add_button"
        android:id="@+id/readButton"
        android:visibility="invisible"/>

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readButton"
        android:layout_alignEnd="@+id/readButton"
        android:id="@+id/clearButton"
        android:visibility="invisible"/>

    <Button
        android:text="Automatically Refresh Facts"
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clearButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual Editing"
        android:id="@+id/manualEditing"
        android:layout_below="@+id/clearButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/doneButton"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/manualEditing"
        android:layout_alignBottom="@+id/manualEditing"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Database Editing"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DatabaseLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

</RelativeLayout>
