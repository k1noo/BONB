<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/database_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="k1noo.bonb.DatabaseScreen">

    <TextView
        android:text="Database Content"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DatabaseLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Fact"
        android:ems="10"
        android:layout_below="@+id/Fact"
        android:layout_alignStart="@+id/false_button"
        android:layout_marginTop="86dp"
        android:id="@+id/editFact" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Veracity"
        android:ems="10"
        android:layout_below="@+id/editFact"
        android:layout_alignStart="@+id/editFact"
        android:id="@+id/editVeracity" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editVeracity"
        android:layout_alignEnd="@+id/editVeracity"
        android:id="@+id/add_button" />

    <Button
        android:text="Read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_button"
        android:layout_alignEnd="@+id/add_button"
        android:id="@+id/readButton" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readButton"
        android:layout_alignEnd="@+id/readButton"
        android:id="@+id/clearButton" />
</RelativeLayout>
